<div class='shadow bg-light rounded p-3'>
	<%= link_to image_tag(item[:image], class: 'rounded'), root_path %> <br>
	<%= link_to item[:name], root_path, class: 'h5 text-dark' %>
	<div class='mb-3'>
		<%= renderStars(item[:rating]) %>
		<span>(<%= item[:reviewCount] %>)</span>
	</div>
	<b class='h4'><%= item[:price] %></b>
</div>